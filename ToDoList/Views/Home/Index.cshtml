@{
    Layout = null;
}

<!DOCTYPE html>
<html ng-app="ToDoListModule">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>To Do List</title>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/ToDoListScripts/ToDoListModule.js"></script>
    <script src="~/Scripts/ToDoListScripts/ToDoListService.js"></script>
    <script src="~/Scripts/ToDoListScripts/ToDoListController.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <div class="main container" ng-controller="ToDoListController">
        <h1 class="display-1">To Do List</h1>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>Task</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>User</th>
                    <th></th>
                    <th></th>
                </tr>
                <tr ng-repeat="task in Lists">
                    <td>{{ task.ListName }}</td>
                    <td>{{ task.ListDesc }}</td>
                    <td>{{ task.ListUser }}</td>
                    <td>{{ task.ListDate | date }}</td>
                    <td>
                        <a class="glyphicon glyphicon-edit" ng-click="retrieveByListNo(task.ListNo)"></a>
                    </td>
                    <td>
                        <a class="glyphicon glyphicon-trash" ng-click="delete(task.ListNo)"></a>
                    </td>
                </tr>
            </table>
        </div>

        <form role="form" style="max-width: 500px;">
            <strong class="error">{{ error }}</strong>
            <div class="form-group">
                <label for="taskName">
                    Task:
                </label>
                <input type="text" class="form-control" id="taskName" maxlength="100" ng-model="ListName" />
            </div>
            <div class="form-group">
                <label for="taskDesc">
                    Description:
                </label>
                <textarea rows="5" cols="10" class="form-control" id="taskDesc" maxlength="256" ng-model="ListDesc"></textarea>
            </div>
            <div class="form-group">
                <label for="taskUser">
                    Name:
                </label>
                <input type="text" class="form-control" id="taskUser" maxlength="20" ng-model="ListUser" />
            </div>
            <div class="form-group">
                <label for="taskDate">
                    Date:
                </label>
                <input type="date" class="form-control" id="taskDate" ng-model="ListDate" />
            </div>
            <button type="submit" class="btn btn-default" ng-click="save()">
                Save
            </button>
            <button type="submit" class="btn btn-danger" ng-click="delete(ListNo)">
                Delete
            </button>
        </form>

    </div>
</body>
</html> 